<div class="jumbotron text-center" id="post-head">
	<h2 class="text-center form-heading">a post</h2>
</div>

<br>

<div class="container">
	<div class="row">
	<div class="col-md-5 text-right" id="post-show">
		<img src="<%= @post.image_url(:medium) %>">
	</div>

	<div class="col-md-7">
		<h3 class="show-title"><span class="label label-warning"><%= @post.category%></span> &nbsp <%= @post.title %></h3>
		<br>
		<p class="show-textarea"><%= simple_format @post.content %></p>
		<br>
		<p class="show-textarea"><strong><%= @post.user.username %></strong> &nbsp <%= @post.created_at.to_date %></p>
		<br>	
		<div class="btn-group" role="group" aria-label="...">
  		<button type="button" class="btn btn-default"><a href="/market/edit/<%= @post.id %>">edit</a></button>
  		<button type="button" class="btn btn-default"><a href="/market/delete_complete/<%= @post.id %>">delete</a></button>
  		<button type="button" class="btn btn-default"><a href="/">Go back to home</a></button>
	</div>
	
	<hr>
	<% @post.comments.each do |comment| %>
	<p><strong><%= comment.user.username %></strong> <%= comment.content  %>&nbsp;<%= comment.updated_at.to_date %>
	<button type="button" class="btn btn-default"><a href="/market/delete_comment_complete/<%= comment.id %>">delete</a></button>
	</p>
	<% end %>

	<form class="text-left" action="/market/write_comment_complete" method="post">
		<input type="hidden" name="post_id" value="<%= @post.id %>">
		<% if !@comment_writer.nil? %>
		<p><strong><%= @comment_writer.username %></strong> &nbsp <input type="text" name="comment_content" placeholder="Write a comment."> &nbsp <input type="submit" value="comment" class="btn btn-default"></p>
		<% end %>
	</form>
	</div>
	<div class="col-md-1">
	</div>
</div>
</div>


