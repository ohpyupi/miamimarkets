<p><%= flash[:alert] %></p>
<h2>Items</h2>

<div style="border: 1ps solid #ffffff">
	<h4>Title: <%= @post.title %></h4>
	<p style="color: #ff0000">Category: <%= @post.category%></p>
	<p> Content: <%= @post.content %></p>
	
	<p><a href="/market/edit/<%= @post.id %>">edit</a></p>
	<p><a href="/market/delete_complete/<%= @post.id %>">delete</a></p>

	<hr>
	<% @post.comments.each do |comment| %>
	<p><strong>username </strong><%= comment.content  %></p>
	<p><a href="/market/delete_comment_complete/<%= comment.id %>">delete</a></p>
	<% end %>

	<form action="/market/write_comment_complete" method="post">
		<input type="hidden" name="post_id" value="<%= @post.id %>">
		<p>username: <input type="text" name="comment_content" placeholder="Write a comment."><input type="submit" value="comment"></p>
	</form>
	<p><a href="/">Go back to the full list.</a></p>
</div>
