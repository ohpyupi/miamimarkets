<p><%= flash[:alert] %></p>

<h2> Write a post </h2>

<form action="/market/write_complete" method="post" enctype="multipart/form-data">
	<p style="color: #ff0000"> Category:
	<select name="post_category">
		<option value="Rent/Housing">Rent/Housing</option>
		<option value="Cars/Trucks">Cars/Trucks</option>
		<option value="Second hands">Second hands</option>
		<option value="Free topics">Free topics</option>
	</select></p>
	<p>Title: <input type="text" name="post_title" placeholder="Please, write a title."></p>
	<p>Content: <textarea name="post_content" placeholder="Please, write content."></textarea></p>
	<p>Upload a photo: <input type="file" name="image"></p>
	<input type="submit" value="Add">
</form>



